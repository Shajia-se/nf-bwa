params {
  bwa_raw_data   = "$HOME/"         
  project_folder = "$PWD"               
  bwa_output     = "bwa_output"         

  genomes  = "$HOME/pipelines/reference/"       // path to reference genome  
  organism = "Mus_musculus"                     
  release  = "GRCm39"                   

  container_bwa_sam   = "$HOME/singularity_images/bwa-sam.sif"

  queue  = 'cpu_p'
  cpus   = 4
  memory = '8GB'
  time   = '4h'
  extra_mounts = ''
}

profiles {
  local { includeConfig 'local.config' }
  hpc   { includeConfig 'slurm.config' }
}